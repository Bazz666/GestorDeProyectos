<div class="container">
    <h2>Crear nuevo rroyecto / Add new project</h2>
    <form id="create_projects" method="get" action="/projects/created">
        <div class="form-group">
            <label for="name">Nombre</label>
            <input name="name" class="form-control">
        </div>
        <div class="form-group">
            <label for="description">Descripcion</label>
            <input name="description" class="form-control">
        </div>
        <div class="form-group">
            <label for="start">Fecha Comienzo</label>
            <input name="start" type="date" class="form-control">
        </div>
        <div class="form-group">
            <label for="end">Fecha TÃ©rmino</label>
            <input name="end" type="date" class="form-control">
        </div>
        <div class="form-group">
            <label for="state">Estado</label>
            <select name="state" id="" class="form-control">
                <option value="propuesta">Propuesta</option>
                <option value="en progreso">En progreso</option>
                <option value="terminado">Terminado</option>
            </select>
        </div>
        <br>
        <button type="submit" class="btn btn-info btn-sm ml-3">Crear</button>
        <button type="submit" class="btn btn-danger btn-sm"><%= link_to "volver / back", projects_dashboard_path%></button>
    </form>
</div>